{
  "manifest_version": 3,
  "short_name": "SquareMaX",
  "name": "SquareMaX",
  "version": "1.0.0",
  "author": "Akorede Salaudeen",
  "icons": {
    "16": "assets/abstract_b.png",
    "32": "assets/abstract_b.png",
    "48": "assets/abstract_b.png",
    "128": "assets/abstract_b.png"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}